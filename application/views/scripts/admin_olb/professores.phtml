<script type="text/javascript" src="<?php echo $this->baseUrl().'/js/jquery/jquery.form.js' ?>"></script>
<script>
jQuery(function(){
    initLoadModal()
    loadProfessores()
})

function loadProfessores() {
    $( "#gridProfessores" ).load(BASE_URL+'admin/grid-professores');
}

function initLoadModal() {
    $('#modalProfessor').dialog({
        autoOpen: false,
        modal: true,
        width: 500,
        height: 610
    })
    $('.ui-dialog-titlebar').hide();
}

function removerProfessor(id, email) {
    $('#modalRemove').dialog({
        autoOpen: true,
        modal: true,
        width: 300,
        height: 230,
        buttons: [
            {
                html: "Sim",
                "class" : "btn btn-danger btn-xs",
                click: function() {
                    var sucesso = false;
                    
                    $.ajax({
                            type:'post',
                            url: BASE_URL+'admin/remover-professor',
                            data: { id: id, email: email },
                            async: false,
                            success: function(resp){
                                if(resp.retorno != 'sucesso'){
                                    alert(resp.msg); 
                                    return false;
                                }else {
                                    sucesso = true;
                                    loadProfessores();
                                    alert(resp.msg);
                                }
                            }
                    })
                    
                    if(sucesso) $( this ).dialog( "close" );
                    
                }
            },
            {
                text: "NÃ£o",
                "class" : "btn btn-primary btn-xs",
                click: function() {
                    $( this ).dialog( "close" );
                } 
            }
            
        ]
    })
    $('.ui-dialog-titlebar').hide();    
}

function salvarProfessor() {
    $( "#frmProfessor" ).ajaxSubmit({
            dataType: 'json',
            success: function(resp){
                if(resp.retorno != 'sucesso'){
                    alert(resp.msg); 
                    return false;
                }else {
                    loadProfessores();
                    $('#modalProfessor').dialog( "close" );
                    alert(resp.msg);
                }
            }
    })
}

function alterarProfessor() {
    $( "#frmProfessor" ).ajaxSubmit({
            dataType: 'json',
            success: function(resp){
                if(resp.retorno != 'sucesso'){
                    alert(resp.msg); 
                    return false;
                }else {
                    loadProfessores();
                    $('#modalProfessor').dialog( "close" );
                    alert(resp.msg);
                }
            }
    })
}


function openModalProfessores() {
    
    $('#modalProfessor').load(BASE_URL+'admin/modal-professor').dialog({
        buttons: [
            {
                text: "Salvar",
                "class" : "btn btn-primary btn-xs",
                click: function() {
                    salvarProfessor();
                } 
            } ,
            {
                html: "Cancelar",
                "class" : "btn btn-danger btn-xs",
                click: function() {
                    $( this ).dialog( "close" );
                }
            }
        ]
    })
    $('#modalProfessor').dialog( "open" );
}

function openModalProfessorUpdate(id) {
    
    $('#modalProfessor').load(BASE_URL+'admin/modal-professor', {id: id}).dialog({
        buttons: [
            {
                text: "Alterar",
                "class" : "btn btn-primary btn-xs",
                click: function() {
                    alterarProfessor();
                } 
            } ,
            {
                html: "Cancelar",
                "class" : "btn btn-danger btn-xs",
                click: function() {
                    $( this ).dialog( "close" );
                }
            }
        ]
    })
    $('#modalProfessor').dialog( "open" );
}
</script>


